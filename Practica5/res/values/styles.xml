<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="sTV" parent = "@android:style/TextAppearance.Medium">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">30dp</item>
	</style>
	<style name="sTV.titulo">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">@color/red</item>
		<item name="android:textSize">40dp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:gravity">center_horizontal</item>
		<item name="android:textAllCaps">true</item>
	</style>
	<style name="sTV.titulo.subtitulo">
		<item name="android:textColor">@color/salmon</item>
		<item name="android:textSize">25dp</item>
		<item name="android:textStyle">bold|italic</item>
		<item name="android:layout_marginBottom">10dp</item>
		<item name="android:textAllCaps">false</item>
	</style>
	<style name="sTV.parrafo">
		<item name="android:textColor">@color/black</item>
		<item name="android:textSize">15dp</item>
		<item name="android:layout_marginBottom">10dp</item>
		<item name="android:layout_marginLeft">10dp</item>
		<item name="android:layout_marginRight">10dp</item>
	</style>
	<style name="sTV.parrafo.subtitulo">
	    <item name="android:textStyle">bold</item>
		<item name="android:textColor">@color/blue</item>
		<item name="android:textSize">15dp</item>
		<item name="android:layout_marginBottom">10dp</item>
		<item name="android:layout_marginLeft">10dp</item>
		<item name="android:layout_marginRight">10dp</item>
		<item name="android:textAllCaps">true</item>
	</style>
	<style name="sIV">
	    <item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginBottom">10dp</item>
		<item name="android:layout_marginLeft">10dp</item>
		<item name="android:layout_marginRight">10dp</item>
	</style>
	<style name="sIV.center_horizontal">
	    <item name="android:layout_gravity">center_horizontal</item>
	</style>
</resources>
